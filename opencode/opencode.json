{
        "$schema": "https://opencode.ai/config.json",
        "autoupdate": true,
        "tui": {
                "scroll_speed": 15
        },
        "permission": {
                "edit": "ask",
                "webfetch": "ask",
                "bash": {
                        "sudo *": "deny",
                        "rm *": "deny",
                        "* rm *": "deny",
                        "*/rm *": "deny",
                        "*": "ask",
                        "ls*": "allow",
                        "cat*": "allow",
                        "head*": "allow",
                        "tail*": "allow",
                        "less*": "allow",
                        "more*": "allow",
                        "tree*": "allow",
                        "find*": "ask",
                        "locate*": "allow",
                        "which*": "allow",
                        "whereis*": "allow",
                        "pwd*": "allow",
                        "df*": "allow",
                        "stat*": "allow",
                        "ps*": "allow",
                        "file*": "allow",
                        "grep*": "allow",
                        "pgrep*": "allow",
                        "rg*": "allow",
                        "sort*": "allow",
                        "uniq*": "allow",
                        "wc*": "allow",
                        "git status*": "allow",
                        "git diff*": "allow",
                        "git log*": "allow",
                        "git show*": "allow",
                        "git branch -D*": "ask",
                        "git branch*": "allow",
                        "git tag*": "allow",
                        "git remote*": "allow",
                        "git config --get*": "allow",
                        "git config --list*": "allow",
                        "git blame*": "allow",
                        "git ls-files*": "allow",
                        "kubectl get*": "allow",
                        "kubectl describe*": "allow",
                        "kubectl logs*": "allow",
                        "kubectl explain*": "allow",
                        "kubectl version*": "allow",
                        "kubectl config view*": "allow",
                        "kubectl config current-context*": "allow",
                        "kubectl config get-contexts*": "allow",
                        "kubectl top*": "allow",
                        "kubectl api-resources*": "allow",
                        "docker ps*": "allow",
                        "docker images*": "allow",
                        "docker logs*": "allow",
                        "docker inspect*": "allow",
                        "docker version*": "allow",
                        "docker info*": "allow",
                        "docker history*": "allow",
                        "docker stats*": "allow",
                        "ps*": "allow",
                        "top*": "allow",
                        "jobs*": "allow",
                        "whoami*": "allow",
                        "groups*": "allow",
                        "uname*": "allow",
                        "uptime*": "allow",
                        "date*": "allow",
                        "npm list*": "allow",
                        "npm info*": "allow",
                        "pip list*": "allow",
                        "pip show*": "allow",
                        "cargo --version*": "allow",
                        "go version*": "allow",
                        "java -version*": "allow",
                        "node --version*": "allow",
                        "python --version*": "allow",
                        "helm list*": "allow",
                        "helm status*": "allow",
                        "helm get*": "allow",
                        "helm history*": "allow",
                        "helm version*": "allow"
                }
        },
        "agent": {
                "general": {
                        "description": "Research agent for web searches and documentation lookups.",
                        "mode": "subagent",
                        "model": "opencode/grok-code",
                        "prompt": "Research agent. Be concise.\n\nNEVER GUESS URLs - search first.\n\nSearch: https://lite.duckduckgo.com/lite/?q={query}\nBackup: https://www.bing.com/search?q={query}&format=rss\n\nWorkflow: Search → Extract URLs → Fetch → Synthesize\nPriority: official docs > Reddit/SO > blogs",
                        "tools": { "read": true, "webfetch": true }
                },
                "explore": {
                        "description": "Fast codebase explorer for file patterns, code search, and structure.",
                        "mode": "subagent",
                        "model": "opencode/grok-code",
                        "prompt": "Codebase explorer. Use glob for files, grep for content, read to examine. Be thorough but efficient.",
                        "tools": { "read": true }
                }
        },
        "keybinds": {
                "leader": "ctrl+x",
                "app_exit": "ctrl+c",
                "editor_open": "<leader>e",
                "theme_list": "<leader>t",
                "sidebar_toggle": "<leader>b",
                "status_view": "<leader>s",
                "session_export": "none",
                "session_new": "<leader>n",
                "session_list": "<leader>l",
                "session_timeline": "<leader>g",
                "session_share": "none",
                "session_unshare": "none",
                "session_interrupt": "escape",
                "session_compact": "<leader>c",
                "session_child_cycle": "ctrl+right",
                "session_child_cycle_reverse": "ctrl+left",
                "messages_page_up": "ctrl+e",
                "messages_page_down": "ctrl+b",
                "messages_half_page_up": "none",
                "messages_half_page_down": "none",
                "messages_first": "ctrl+g,home",
                "messages_last": "ctrl+alt+g,end",
                "messages_copy": "<leader>y",
                "messages_undo": "<leader>u",
                "messages_redo": "<leader>r",
                "messages_toggle_conceal": "<leader>h",
                "model_list": "<leader>m",
                "model_cycle_recent": "f2",
                "model_cycle_recent_reverse": "shift+f2",
                "command_list": "ctrl+o",
                "agent_list": "<leader>a",
                "agent_cycle": "tab",
                "model_cycle_favorite": "ctrl+n",
                "model_cycle_favorite_reverse": "ctrl+p",
                "agent_cycle_reverse": "shift+tab",
                "input_clear": "ctrl+c",
                "input_paste": "ctrl+v,ctrl+shift+v",
                "input_submit": "enter",
                "input_newline": "shift+return",
                "history_previous": "up",
                "history_next": "down"
        },
        "plugin": [
                "opencode-antigravity-auth@beta"
        ],
        "provider": {
                "google": {
                        "models": {
                                "antigravity-gemini-3-pro": {
                                        "name": "Gemini 3 Pro (Antigravity)",
                                        "limit": { "context": 1048576, "output": 65535 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
                                        "variants": {
                                                "low": { "thinkingLevel": "low" },
                                                "high": { "thinkingLevel": "high" }
                                        }
                                },
                                "antigravity-gemini-3-flash": {
                                        "name": "Gemini 3 Flash (Antigravity)",
                                        "limit": { "context": 1048576, "output": 65536 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
                                        "variants": {
                                                "minimal": { "thinkingLevel": "minimal" },
                                                "low": { "thinkingLevel": "low" },
                                                "medium": { "thinkingLevel": "medium" },
                                                "high": { "thinkingLevel": "high" }
                                        }
                                },
                                "antigravity-claude-sonnet-4-5": {
                                        "name": "Claude Sonnet 4.5 (no thinking) (Antigravity)",
                                        "limit": { "context": 200000, "output": 64000 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
                                },
                                "antigravity-claude-sonnet-4-5-thinking": {
                                        "name": "Claude Sonnet 4.5 Thinking (Antigravity)",
                                        "limit": { "context": 200000, "output": 64000 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
                                        "variants": {
                                                "low": { "thinkingConfig": { "thinkingBudget": 8192 } },
                                                "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
                                        }
                                },
                                "antigravity-claude-opus-4-5-thinking": {
                                        "name": "Claude Opus 4.5 Thinking (Antigravity)",
                                        "limit": { "context": 200000, "output": 64000 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] },
                                        "variants": {
                                                "low": { "thinkingConfig": { "thinkingBudget": 0 } },
                                                "max": { "thinkingConfig": { "thinkingBudget": 32768 } }
                                        }
                                },
                                "gemini-2.5-flash": {
                                        "name": "Gemini 2.5 Flash (Gemini CLI)",
                                        "limit": { "context": 1048576, "output": 65536 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
                                },
                                "gemini-2.5-pro": {
                                        "name": "Gemini 2.5 Pro (Gemini CLI)",
                                        "limit": { "context": 1048576, "output": 65536 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
                                },
                                "gemini-3-flash-preview": {
                                        "name": "Gemini 3 Flash Preview (Gemini CLI)",
                                        "limit": { "context": 1048576, "output": 65536 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
                                },
                                "gemini-3-pro-preview": {
                                        "name": "Gemini 3 Pro Preview (Gemini CLI)",
                                        "limit": { "context": 1048576, "output": 65535 },
                                        "modalities": { "input": ["text", "image", "pdf"], "output": ["text"] }
                                }
                        }
                }
        }
}
