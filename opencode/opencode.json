{
        "$schema": "https://opencode.ai/config.json",
        "tui": {
                "scroll_speed": 10
        },
        "permission": {
                "edit": "ask",
                "webfetch": "ask",
                "bash": {
                        "sudo *": "deny",
                        "*": "ask",
                        ".*|.*": "ask",
                        ".*;.*": "ask",
                        ".*&&.*": "ask",
                        ".*&.*": "ask",
                        ".*\\$\\(.*\\).*": "ask",
                        ".*`.*`.*": "ask",
                        ".*>.*": "ask",
                        ".*<.*": "ask",
                        ".*proc.*": "ask",
                        ".*sys.*": "ask",
                        ".*etc/passwd.*": "ask",
                        ".*etc/shadow.*": "ask",
                        "ls*": "allow",
                        "cat*": "allow",
                        "head*": "allow",
                        "tail*": "allow",
                        "less*": "allow",
                        "more*": "allow",
                        "tree*": "allow",
                        "find*": "ask",
                        "locat*e": "allow",
                        "which*": "allow",
                        "whereis*": "allow",
                        "pwd*": "allow",
                        "df*": "allow",
                        "stat*": "allow",
                        "file*": "allow",
                        "grep*": "allow",
                        "egrep*": "allow",
                        "fgrep*": "allow",
                        "rg*": "allow",
                        "sort*": "allow",
                        "uniq*": "allow",
                        "wc*": "allow",
                        "git status*": "allow",
                        "git diff*": "allow",
                        "git log*": "allow",
                        "git show*": "allow",
                        "git branch -D*": "ask",
                        "git branch*": "allow",
                        "git tag*": "allow",
                        "git remote*": "allow",
                        "git config --get*": "allow",
                        "git config --list*": "allow",
                        "git blame*": "allow",
                        "git ls-files*": "allow",
                        "kubectl get*": "allow",
                        "kubectl describe*": "allow",
                        "kubectl logs*": "allow",
                        "kubectl explain*": "allow",
                        "kubectl version*": "allow",
                        "kubectl config view*": "allow",
                        "kubectl config current-context*": "allow",
                        "kubectl config get-contexts*": "allow",
                        "kubectl top*": "allow",
                        "kubectl api-resources*": "allow",
                        "docker ps*": "allow",
                        "docker images*": "allow",
                        "docker logs*": "allow",
                        "docker inspect*": "allow",
                        "docker version*": "allow",
                        "docker info*": "allow",
                        "docker history*": "allow",
                        "docker stats*": "allow",
                        "ps*": "allow",
                        "top*": "allow",
                        "htop*": "allow",
                        "jobs*": "allow",
                        "whoami*": "allow",
                        "groups*": "allow",
                        "uname*": "allow",
                        "uptime*": "allow",
                        "date*": "allow",
                        "npm list*": "allow",
                        "npm info*": "allow",
                        "pip list*": "allow",
                        "pip show*": "allow",
                        "cargo --version*": "allow",
                        "go version*": "allow",
                        "java -version*": "allow",
                        "node --version*": "allow",
                        "python --version*": "allow",
                        "helm list*": "allow",
                        "helm status*": "allow",
                        "helm get*": "allow",
                        "helm history*": "allow",
                        "helm version*": "allow"
                }
        },
        "keybinds": {
                "leader": "ctrl+x",
                "app_exit": "ctrl+c",
                "editor_open": "<leader>e",
                "theme_list": "<leader>t",
                "sidebar_toggle": "<leader>b",
                "status_view": "<leader>s",
                "session_export": "none",
                "session_new": "<leader>n",
                "session_list": "<leader>l",
                "session_timeline": "<leader>g",
                "session_share": "none",
                "session_unshare": "none",
                "session_interrupt": "escape",
                "session_compact": "<leader>c",
                "session_child_cycle": "ctrl+right",
                "session_child_cycle_reverse": "ctrl+left",
                "messages_page_up": "ctrl+e",
                "messages_page_down": "ctrl+b",
                "messages_half_page_up": "none",
                "messages_half_page_down": "none",
                "messages_first": "ctrl+g,home",
                "messages_last": "ctrl+alt+g,end",
                "messages_copy": "<leader>y",
                "messages_undo": "<leader>u",
                "messages_redo": "<leader>r",
                "messages_toggle_conceal": "<leader>h",
                "model_list": "<leader>m",
                "model_cycle_recent": "f2",
                "model_cycle_recent_reverse": "shift+f2",
                "command_list": "ctrl+p",
                "agent_list": "<leader>a",
                "agent_cycle": "tab",
                "agent_cycle_reverse": "shift+tab",
                "input_clear": "ctrl+c",
                "input_forward_delete": "none",
                "input_paste": "ctrl+v,ctrl+shift+v",
                "input_submit": "enter",
                "input_newline": "shift+return",
                "history_previous": "up",
                "history_next": "down"
        }
}
