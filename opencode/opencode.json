{
	"$schema": "https://opencode.ai/config.json",
	"autoupdate": false,
	"tui": {
		"scroll_speed": 15
	},
	"snapshot": false,
	"permission": {
		"edit": "ask",
		"webfetch": "ask",
		"bash": {
			"*": "ask",
			"sudo *": "deny",
			"rm *": "deny",
			"* rm *": "deny",
			"*/rm *": "deny",
			"eval*": "deny",
			"*$(*": "deny",
			"tldr*": "allow",
			"man*": "allow",
			"* --help": "allow",
			"help*": "allow",
			"ls*": "allow",
			"cat*": "allow",
			"head*": "allow",
			"tail*": "allow",
			"less*": "allow",
			"more*": "allow",
			"tree*": "allow",
			"find*": "allow",
			"locate*": "allow",
			"which*": "allow",
			"whereis*": "allow",
			"pwd*": "allow",
			"df*": "allow",
			"stat*": "allow",
			"ps*": "allow",
			"file*": "allow",
			"grep*": "allow",
			"pgrep*": "allow",
			"rg*": "allow",
			"sort*": "allow",
			"uniq*": "allow",
			"wc*": "allow",
			"git status*": "allow",
			"git diff*": "allow",
			"git log*": "allow",
			"git show*": "allow",
			"git branch -D*": "ask",
			"git branch*": "allow",
			"git remote*": "allow",
			"git config --get*": "allow",
			"git config --list*": "allow",
			"git blame*": "allow",
			"git ls-files*": "allow",
			"kubectl get*": "allow",
			"kubectl describe*": "allow",
			"kubectl logs*": "allow",
			"kubectl explain*": "allow",
			"kubectl version*": "allow",
			"kubectl config view*": "allow",
			"kubectl config current-context*": "allow",
			"kubectl config get-contexts*": "allow",
			"kubectl top*": "allow",
			"kubectl api-resources*": "allow",
			"docker ps*": "allow",
			"docker images*": "allow",
			"docker logs*": "allow",
			"docker inspect*": "allow",
			"docker version*": "allow",
			"docker info*": "allow",
			"docker history*": "allow",
			"docker stats*": "allow",
			"top*": "allow",
			"jobs*": "allow",
			"whoami*": "allow",
			"groups*": "allow",
			"uname*": "allow",
			"uptime*": "allow",
			"date*": "allow",
			"npm list*": "allow",
			"npm info*": "allow",
			"pip list*": "allow",
			"pip show*": "allow",
			"cargo --version*": "allow",
			"go version*": "allow",
			"java -version*": "allow",
			"node --version*": "allow",
			"python --version*": "allow",
			"helm list*": "allow",
			"helm status*": "allow",
			"helm get*": "allow",
			"helm history*": "allow",
			"helm version*": "allow"
		}
	},
	"agent": {
		"general": {
			"description": "Research agent for web searches and documentation lookups. Uses Exa search as primary source.",
			"mode": "subagent",
			"model": "zai-coding-plan/glm-5",
			"prompt": "Research agent. Be concise.\n\nSearch tools priority:\n1. websearch (Exa) - PRIMARY for all searches\n2. webfetch - SPARINGLY, only for specific page content when Exa results need more detail\n\nPriority: official docs > Reddit/SO > blogs",
			"tools": {
				"read": true,
				"webfetch": true,
				"websearch": true
			}
		},
		"explore": {
			"description": "Fast codebase explorer for file patterns, code search, and structure. Uses Exa search for external context.",
			"mode": "subagent",
			"model": "zai-coding-plan/glm-5",
			"prompt": "Codebase explorer. Use glob for files, grep for content, read to examine.\n\nExternal context tools:\n- codesearch (Exa) - PRIMARY for programming docs/examples\n- websearch (Exa) - PRIMARY for general web search\n- webfetch - SPARINGLY, only when Exa results need more detail\n\nBe thorough but efficient.",
			"tools": {
				"read": true,
				"websearch": true,
				"codesearch": true
			}
		},
		"shell": {
			"description": "[ONLY FOR USE VIA 'opencode run --agent=shell'. NOT FOR USE AS A SUBAGENT]. Shell expert that outputs concise shell commands using coreutils, fd, ripgrep, and fzf.",
			"mode": "primary",
			"model": "github-copilot/gpt-4o",
			"prompt": "You are a shell command generator. DO NOT MAKE ANY TOOL CALLS, DO NOT PROVIDE ANY EXPLANATION AND/OR FORMAT YOUR OUTPUT. Your ONLY task is to output the shell command that achieves the goal. Be VERY concise. NO comments, NO backticks, NO explanations. JUST the shell command.",
			"tools": {}
		}
	},
	"keybinds": {
		"leader": "ctrl+x",
		"app_exit": "ctrl+c",
		"editor_open": "<leader>e",
		"theme_list": "<leader>t",
		"sidebar_toggle": "<leader>b",
		"status_view": "<leader>s",
		"session_export": "none",
		"session_new": "<leader>n",
		"session_list": "<leader>l",
		"session_timeline": "<leader>g",
		"session_share": "none",
		"session_unshare": "none",
		"session_interrupt": "escape",
		"session_compact": "<leader>c",
		"session_child_cycle": "ctrl+right",
		"session_child_cycle_reverse": "ctrl+left",
		"messages_page_up": "ctrl+e",
		"messages_page_down": "ctrl+b",
		"messages_half_page_up": "none",
		"messages_half_page_down": "none",
		"messages_first": "ctrl+g,home",
		"messages_last": "ctrl+alt+g,end",
		"messages_copy": "<leader>y",
		"messages_undo": "<leader>u",
		"messages_redo": "<leader>r",
		"messages_toggle_conceal": "<leader>h",
		"model_list": "<leader>m",
		"model_cycle_recent": "f2",
		"model_cycle_recent_reverse": "shift+f2",
		"command_list": "ctrl+o",
		"agent_list": "<leader>a",
		"agent_cycle": "tab",
		"model_cycle_favorite": "ctrl+n",
		"model_cycle_favorite_reverse": "ctrl+p",
		"agent_cycle_reverse": "shift+tab",
		"input_clear": "ctrl+c",
		"input_paste": "ctrl+v,ctrl+shift+v",
		"input_submit": "enter",
		"input_newline": "shift+return",
		"history_previous": "up",
		"history_next": "down"
	},
	"plugin": [
		"@sahaj-b/opencode-notifier@latest",
		"@sami7786/opencode-image-proxy@latest"
	]
}
